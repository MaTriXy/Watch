<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <merge
        tools:background="?selectableItemBackground"
        tools:clickable="true"
        tools:focusable="true"
        tools:layout_height="@dimen/one_line_row_list__with_icon__height"
        tools:layout_width="match_parent"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
        tools:theme="@style/WatchAppTheme">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/ic_medium"
            android:layout_height="@dimen/ic_medium"
            android:layout_marginStart="@dimen/one_line_row_list__margin_start"
            android:contentDescription="@string/icon_representing_the_row_intention"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_outline_bluetooth_24dp" />

        <TextView
            android:id="@+id/text"
            style="@style/Body1.Black.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/one_line_row_list__text_margin_start"
            android:layout_marginEnd="@dimen/one_line_row_list__margin_end"
            android:text="@string/one_line_list_row"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toTopOf="parent" />

    </merge>

</layout>